const router = require('express').Router();
const { Comment } = require('../../models');
const isAuthorized = require('../../utils/auth');

router.post('/', async (req, res) => {
    try {
        const newComment = await Comment.create({
            user_id: req.session.user_id,
            content: req.body.content,
            Comment_id: req.body.Comment_id,
        });
        res.status(200).json(newComment)
    } catch (err) {
        res.status(500).json(err)
    }
})

router.delete('/:id', isAuthorized, async (req, res) => {
    //route for deleting Comment
    try {
        const CommentData = await Comment.destroy({
            //checks for user_id and the Comment id to match, prevents deleting other peoples Comment
            where: { id: req.params.id, user_id: req.session.user_id, }
        })
        if (!CommentData) {
            //if Comment isnt found posts a not found message
            res.status(404).json({ message: 'Comment not found, check id' })
            return
        }
        res.status(200).json(CommentData)
    } catch (err) {
        res.status(500).json(err)
    }
})

module.exports = router